<div class="mix">
  <h3> How often would you like to switch between playlists:</h3>
  <select class="mix-level">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
</div>
<div class = "songAdder">
   <div class="Playlist">
     {{>songInfoTemplate}}
      {{>playListTemplate}}
   </div>
   <div class="Playlist">
     {{>songInfoTemplate}}
     {{>playListTemplate}}
   </div>
</div>
